
@{
    ViewBag.Title = "View-Download";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View-Download</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.0/css/bootstrap-datepicker3.standalone.css" />
    <style>
        .content h1 {
            /*width: 50%;*/
            color: #000000;
            font-size: 25px;
            font-weight: normal;
            text-align: left;
        }

        .styled-box {
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            width: auto;
            height: 500px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        .dropdown-divider {
            height: 0;
            margin: 0.5rem 0;
            overflow: hidden;
            border-top: 1px solid #e9ecef;
        }
        .styled-table {
            border-collapse: collapse;
            margin: auto;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 1200px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        .styled-table thead tr {
            background-color: #f2f2f2;
            color: #000000;
            text-align: left;
        }
        
        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }
        
        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

        .styled-table tbody tr:last-of-type {
            border-bottom: 2px solid #f2f2f2;
        }
    </style>
</head>
<body>
    <br />
    <div class="styled-box">
        <div class="content">
            <h1 class="title">ตารางแสดงข้อมูลยอดดูและดาวน์โหลดเอกสาร</h1>
        </div>
        <div class="dropdown-divider"></div>
        <br />
        <table class="styled-table">
            <thead>
                <tr>
                    <th>ลำดับ</th>
                    <th>ชื่อเอกสาร</th>
                    <th>ประเภทเอกสาร</th>
                    <th>ยอดดูเอกสาร</th>
                    <th>ยอดดาวน์โหลดเอกสาร</th>
                </tr>
            </thead>
            <tbody>
                @*เพิ่มลำดับ*@
                @{
                    int counter = 1;
                }
                @foreach (var item in Model)
                 {
                    <tr>
                        <td>
                            @counter
                            @{
                                counter++;
                            }
                        </td>
                        <td>@item.file_name</td>
                        <td>@item.genre</td>
                        <td>@item.view_count</td>
                        <td>@item.download_count</td>
                    </tr>

                 }
            </tbody>
        </table>
    
    
    </div>


    
</body>
</html>
