                                <div class="image-caption" style="white-space: nowrap; word-break: break-word;">
                                    <p>ชื่อ : @item.name</p>
                                    <p>ตำแหน่ง : @item.position</p>
                                    <p>แผนก : @item.division</p>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="button-container">
                    <button id="nextButton" class="icon-button"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div><br />
            <div class="derpartment">
                <p>ฝ่ายบริหารกลาง</p>
            </div>
            <div class="slider">
                <div class="button-container">
                    <button id="prevButton" class="icon-button"><i class="fas fa-chevron-left"></i></button>
                </div>
                <div class="column">
                    @foreach (var item in Model)
                    {
                        if (item.department == "ฝ่ายบริหารกลาง")
                        {
                            <div class="slide" style="display: inline-block; width: 180px;">
                                <img src="@item.image" alt="Image" width="100%" height="auto">
                                <div class="image-caption" style="white-space: nowrap; word-break: break-word;">
                                    <p>ชื่อ : @item.name</p>
                                    <p>ตำแหน่ง : @item.position</p>
                                    <p>แผนก : @item.division</p>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="button-container">
                    <button id="nextButton" class="icon-button"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div><br />

        <a href="@Url.Action("AddOrganizational", "Organizational")" class="btn btn-primary">แก้ไข</a>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script>
        const prevButton = document.getElementById("prevButton");
        const nextButton = document.getElementById("nextButton");
        const slides = Array.from(document.querySelectorAll(".slide"));

        const visibleSlideCount = 4;
        let currentIndex = 0;

        function showSlides() {
            slides.forEach((slide, index) => {
                if (index >= currentIndex && index < currentIndex + visibleSlideCount) {
                    slide.classList.add("active");
                } else {
                    slide.classList.remove("active");
                }
            });
        }

        prevButton.addEventListener("click", () => {
            if (currentIndex > 0) {
                currentIndex--;
                showSlides();
            }
        });

        nextButton.addEventListener("click", () => {
            if (currentIndex < slides.length - visibleSlideCount) {
                currentIndex++;
                showSlides();
            }
        });

        showSlides();

    </script>

</body>

</html>


